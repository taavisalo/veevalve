{
  "name": "@veevalve/mobile",
  "version": "0.1.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "dev": "expo start --clear",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "format": "prettier --check \"**/*.{ts,tsx,json}\"",
    "clean": "rm -rf .expo dist"
  },
  "dependencies": {
    "@veevalve/core": "workspace:*",
    "@veevalve/ui": "workspace:*",
    "expo": "~53.0.2",
    "expo-location": "~18.0.2",
    "expo-notifications": "~0.31.3",
    "expo-status-bar": "~2.0.1",
    "react": "19.0.0",
    "react-native": "0.79.0",
    "react-native-safe-area-context": "4.12.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.8",
    "babel-preset-expo": "^13.0.1",
    "vitest": "^3.0.8"
  }
}
