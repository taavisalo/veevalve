    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vitest": "^4.0.18"
  }
