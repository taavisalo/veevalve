{
  "name": "@veevalve/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm prisma:ensure && nest start --watch",
    "build": "pnpm prisma:ensure && nest build",
    "start": "node dist/src/main.js",
    "start:docker": "node dist/src/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "pnpm prisma:ensure && tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --check \"src/**/*.{ts,tsx,json}\" prisma/schema.prisma",
    "clean": "rm -rf dist",
    "prisma:ensure": "sh ./scripts/ensure-prisma-client.sh",
    "prisma:generate": "XDG_CACHE_HOME=../../.cache prisma generate",
    "prisma:migrate": "XDG_CACHE_HOME=../../.cache prisma migrate dev",
    "prisma:migrate:create": "XDG_CACHE_HOME=../../.cache prisma migrate dev --create-only",
    "prisma:migrate:deploy": "XDG_CACHE_HOME=../../.cache prisma migrate deploy",
    "prisma:reset": "XDG_CACHE_HOME=../../.cache prisma migrate reset --force",
    "prisma:studio": "XDG_CACHE_HOME=../../.cache prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "sync:token": "node ./scripts/generate-sync-token.mjs"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-fastify": "^11.1.13",
    "@nestjs/schedule": "^5.0.1",
    "@prisma/client": "^6.19.2",
    "@veevalve/core": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "fastify": "^5.7.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@types/node": "^22.19.11",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  }
}
