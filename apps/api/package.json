{
  "name": "@veevalve/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm prisma:generate && nest start --watch",
    "build": "pnpm prisma:generate && nest build",
    "start": "node dist/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "pnpm prisma:generate && tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --check \"src/**/*.{ts,tsx,json}\" prisma/schema.prisma",
    "clean": "rm -rf dist",
    "prisma:generate": "XDG_CACHE_HOME=../../.cache prisma generate",
    "prisma:migrate": "XDG_CACHE_HOME=../../.cache prisma migrate dev",
    "prisma:studio": "XDG_CACHE_HOME=../../.cache prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.11",
    "@nestjs/platform-fastify": "^11.0.11",
    "@nestjs/schedule": "^5.0.1",
    "@prisma/client": "^6.4.1",
    "@veevalve/core": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^5.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.0.11",
    "@types/node": "^22.13.5",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "vitest": "^3.0.8"
  },
  "prisma": {
    "seed": "pnpm prisma:seed"
  }
}
