{
  "name": "@veevalve/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./web": "./src/web/index.ts",
    "./native": "./src/native/index.ts",
    "./tokens": "./src/tokens.ts",
    "./tailwind-preset": "./tailwind-preset.ts"
  },
  "scripts": {
    "build": "tsup src/web/index.ts src/native/index.ts --format esm,cjs --dts",
    "dev": "tsup src/web/index.ts src/native/index.ts --watch --dts",
    "lint": "eslint \"src/**/*.{ts,tsx}\" tailwind-preset.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "format": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@veevalve/core": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "react-native": "0.79.0",
    "tailwindcss": "^3.4.19",
    "tsup": "^8.5.1",
    "vitest": "^3.2.4"
  }
}
