{
  "name": "@veevalve/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "src/index.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./src/client.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "types": "./src/server.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts src/server.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/client.ts src/server.ts --watch --dts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.6"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "vitest": "^3.2.4"
  }
}
