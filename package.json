{
  "name": "veevalve",
  "version": "0.1.0",
  "private": true,
  "description": "Water quality alerts for Estonian pools and beaches.",
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.11.1"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "turbo run format",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.12",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "glob": "*",
      "inflight": "*",
      "rimraf": "*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native",
        "react-dom"
      ]
    }
  }
}
