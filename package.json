{
  "name": "veevalve",
  "version": "0.1.0",
  "private": true,
  "description": "Water quality alerts for Estonian pools and beaches.",
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "vercel:check:api": "pnpm --filter @veevalve/api vercel:check",
    "test": "turbo run test",
    "perf:smoke": "bash ./scripts/perf-smoke.sh",
    "format": "turbo run format",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp"
    ],
    "allowedDeprecatedVersions": {
      "glob": "*",
      "inflight": "*",
      "rimraf": "*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native",
        "react-dom"
      ]
    }
  }
}
